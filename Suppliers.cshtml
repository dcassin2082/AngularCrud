<div ng-app="supplierApp" ng-controller="supplierController" ng-init="getSuppliers()">
    <div class="container ng-cloak" ng-cloak>
        <div class="row">
            <div class="col-md-12">
                <br /><br />
                <h2 class="text-muted">Suppliers</h2>
                <label class="sr-only">Search:</label> <input class="form-control" placeholder="Search" type="text" ng-model="searchText" />
                <table class="table table-hover table-bordered table-striped">
                    <thead class="table-header">
                        <tr>
                            <th class="table-header">
                                <a href="#" ng-click="orderByField ='sUpPLieRId'; reverseSort = !reverseSort">
                                    Supplier Id<span ng-show="orderByField == 'SupplierId'"><span ng-show="!reverseSort">^</span><span ng-show="!reverseSort"></span></span>
                                </a>
                            </th>
                            <th class="table-header">
                                <a href="#" ng-click="orderByField ='SupplierName'; reverseSort = !reverseSort">
                                    Supplier Name<span ng-show="orderByField == 'SupplierName'"><span ng-show="!reverseSort">^</span><span ng-show="!reverseSort"></span></span>
                                </a>
                            </th>
                            <th class="table-header">
                                <a href="#" ng-click="orderByField ='Country'; reverseSort = !reverseSort">
                                    Country<span ng-show="orderByField == 'Country'"><span ng-show="!reverseSort">^</span><span ng-show="!reverseSort"></span></span>
                                </a>
                            </th>
                            <th class="table-header">
                                <a href="#" ng-click="orderByField ='Street'; reverseSort = !reverseSort">
                                    Street<span ng-show="orderByField == 'Street'"><span ng-show="!reverseSort">^</span><span ng-show="!reverseSort"></span></span>
                                </a>
                            </th>
                            <th class="table-header">
                                <a href="#" ng-click="orderByField ='City'; reverseSort = !reverseSort">
                                    City<span ng-show="orderByField == 'City'"><span ng-show="!reverseSort">^</span><span ng-show="!reverseSort"></span></span>
                                </a>
                            </th>
                            <th class="table-header">
                                <a href="#" ng-click="orderByField ='State'; reverseSort = !reverseSort">
                                    State<span ng-show="orderByField == 'State'"><span ng-show="!reverseSort">^</span><span ng-show="!reverseSort"></span></span>
                                </a>
                            </th>
                            <th class="table-header">
                                <a href="#" ng-click="orderByField ='ZIP'; reverseSort = !reverseSort">
                                    ZIP<span ng-show="orderByField == 'ZIP'"><span ng-show="!reverseSort">^</span><span ng-show="!reverseSort"></span></span>
                                </a>
                            </th>
                            <th class="table-header"><span class="glyphicon glyphicon-edit btn-success"></span> Update</th>
                            <th class="table-header"><span class="glyphicon glyphicon-remove btn-danger"></span> Remove</th>
                        </tr>
                    </thead>
                    <tr ng-repeat="s in suppliers | filter: paginate | filter:searchText | orderBy:orderByField:reverseSort">
                        <td>
                            <p>
                                {{s.SupplierId}}
                            </p>
                        </td>
                        <td>
                            <p>
                                {{s.SupplierName}}
                            </p>
                        </td>
                        <td>
                            <p>
                                {{s.Country}}
                            </p>
                        </td>
                        <td>
                            <p>
                                {{s.Street}}
                            </p>
                        </td>
                        <td>
                            <p>
                                {{s.City}}
                            </p>
                        </td>
                        <td>
                            <p>
                                {{s.State | uppercase}}
                            </p>
                        </td>
                        <td>
                            <p>
                                {{s.ZIP}}
                            </p>
                        </td>
                        <td>
                            <button type="button" class="btn btn-primary btn-sm" data-ng-click="getSupplier(s.SupplierId)" data-toggle="modal" data-target="#editModal">
                                <span class="glyphicon glyphicon-edit"></span>
                                Edit
                            </button>
                        </td>
                        <td>
                            <button typt="button" class="btn btn-primary btn-sm" data-ng-click="getSupplier(s.SupplierId)" data-toggle="modal" data-target="#deleteModal">
                                <span class="glyphicon glyphicon-remove"></span>
                                Delete
                            </button>
                        </td>
                    </tr>
                </table>
                <pagination total-items="totalItems" ng-model="currentPage"
                            max-size="5" boundary-links="true"
                            items-per-page="numPerPage" class="pagination-lg">
                </pagination>
            </div>
        </div>
    </div>
    <div class="container ng-cloak" ng-cloak>
        <div class="row">
            <div class="col-md-12">
                <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#addModal">Add Supplier</button>
                <div id="addModal" class="modal fade" role="dialog">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal">&times;</button>
                                <h4 class="modal-title">Add New Supplier</h4>
                            </div>
                            <div class="modal-body">
                                <form class="form-horizontal" role="form" name="addsupplierform">
                                    <div class="form-group">
                                        <label for="title" class="col-sm-2 control-label">Name</label>
                                        <div class="col-sm-10">
                                            <input type="text" data-ng-model="supplier.SupplierName" class="form-control" id="title" placeholder="Supplier Name" required title="Enter supplier name" />
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="title" class="col-sm-2 control-label">Country</label>
                                        <div class="col-sm-10">
                                            <input type="text" data-ng-model="supplier.Country" class="form-control" id="title" placeholder="Country" required title="Enter supplier country" />
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="title" class="col-sm-2 control-label">Street</label>
                                        <div class="col-sm-10">
                                            <input type="text" data-ng-model="supplier.Street" class="form-control" id="title" placeholder="Supplier Street" required title="Enter supplier street" />
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="title" class="col-sm-2 control-label">City</label>
                                        <div class="col-sm-10">
                                            <input type="text" data-ng-model="supplier.City" class="form-control" id="title" placeholder="Supplier City" required title="Enter supplier city" />
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="title" class="col-sm-2 control-label">State</label>
                                        <div class="col-sm-10">
                                            <input type="text" data-ng-model="supplier.State" class="form-control" id="title" placeholder="Supplier State" required title="Enter supplier state" />
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="title" class="col-sm-2 control-label">ZIP</label>
                                        <div class="col-sm-10">
                                            <input type="text" data-ng-model="supplier.ZIP" class="form-control" id="title" placeholder="Supplier ZIP" required title="Enter supplier zip" />
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-sm-offset-2 col-sm-10">
                                            <input type="submit" value="Save" data-ng-click="addSupplier(supplier)" class="btn btn-primary" />
                                            <input type="button" value="Cancel" data-ng-click="cancelAdd()" class="btn btn-primary" />
                                        </div>
                                    </div>
                                </form>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
   
    <div class="row">
        <div id="editModal" class="modal fade" role="dialog">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title">Edit Supplier</h4>
                    </div>
                    <div class="modal-body">
                        <form class="form-horizontal" role="form" name="editsupplierform">
                            <div class="form-group">
                                <label for="title" class="col-sm-2 control-label">Name</label>
                                <div class="col-sm-10">
                                    <input type="text" data-ng-model="supplier.SupplierName" class="form-control" id="title" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="title" class="col-sm-2 control-label">Country</label>
                                <div class="col-sm-10">
                                    <input type="text" data-ng-model="supplier.Country" class="form-control" id="title" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="title" class="col-sm-2 control-label">Street</label>
                                <div class="col-sm-10">
                                    <input type="text" data-ng-model="supplier.Street" class="form-control" id="title" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="title" class="col-sm-2 control-label">City</label>
                                <div class="col-sm-10">
                                    <input type="text" data-ng-model="supplier.City" class="form-control" id="title" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="title" class="col-sm-2 control-label">State</label>
                                <div class="col-sm-10">
                                    <input type="text" data-ng-model="supplier.State" class="form-control" id="title" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="title" class="col-sm-2 control-label">ZIP</label>
                                <div class="col-sm-10">
                                    <input type="text" data-ng-model="supplier.ZIP" class="form-control" id="title" />
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-sm-offset-2 col-sm-10">
                                    <input type="submit" value="Save" data-ng-click="updateSupplier(supplier.SupplierId, supplier)" class="btn btn-primary" />
                                    <input type="button" value="Cancel" data-ng-click="cancelEdit()" class="btn btn-primary" />
                                </div>
                            </div>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div id="deleteModal" class="modal fade" role="dialog">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dissmiss="modal">&times;</button>
                        <h4 class="modal-title">Delete Supplier</h4>
                    </div>
                    <div class="modal-body">
                        <p>
                            Are you sure you want to delete this supplier?
                        </p>
                        <div class="col-sm-offset-2 col-sm-10">
                            <input type="submit" value="Delete" data-ng-click="deleteSupplier(supplier.SupplierId)" class="btn btn-primary" />
                            <input type="button" value="Cancel" data-ng-click="cancelDelete()" class="btn btn-primary" />
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
